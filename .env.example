# =============================================================================
# RetroPulse - Docker Compose Environment Variables
# =============================================================================
# Copy this file to .env and customize values for your environment.
# DO NOT commit .env to version control.
# =============================================================================

# -----------------------------------------------------------------------------
# MongoDB Configuration
# -----------------------------------------------------------------------------
MONGO_PASSWORD=your-secure-mongodb-password

# -----------------------------------------------------------------------------
# Backend Configuration
# -----------------------------------------------------------------------------
NODE_ENV=development

# Security - MUST change in production!
COOKIE_SECRET=your-secure-cookie-secret-minimum-32-characters
ADMIN_SECRET_KEY=your-admin-api-key-minimum-16-chars

# URLs (adjust for your deployment)
FRONTEND_URL=http://localhost:8080
APP_URL=http://localhost:3000

# -----------------------------------------------------------------------------
# Frontend Configuration
# -----------------------------------------------------------------------------
# API endpoint the frontend will call
API_URL=http://localhost:3000
WS_URL=http://localhost:3000
